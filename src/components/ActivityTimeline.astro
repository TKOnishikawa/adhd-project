---
import { getCollection } from 'astro:content';
import { themes } from '../data/themes';
import { contentTypeConfig, maturityConfig } from '../data/taxonomy';

const base = import.meta.env.BASE_URL;

// Gather all content with dates
const research = await getCollection('research', ({ data }) => !data.draft);
const meetings = await getCollection('meetings', ({ data }) => !data.draft);
const references = await getCollection('references', ({ data }) => !data.draft);
const notes = await getCollection('notes', ({ data }) => !data.draft);
const snsStrategy = await getCollection('sns-strategy', ({ data }) => !data.draft);

type TimelineItem = {
  date: Date;
  type: keyof typeof contentTypeConfig;
  title: string;
  href: string;
  meta?: string;
};

const items: TimelineItem[] = [
  ...research.map((r) => ({
    date: r.data.updated ?? r.data.date,
    type: 'research' as const,
    title: r.data.title,
    href: `${base}/research/${r.id.replace(/\.md$/, '')}/`,
    meta: themes[r.data.themeId as keyof typeof themes]?.label,
  })),
  ...meetings.map((m) => ({
    date: m.data.date,
    type: 'meeting' as const,
    title: m.data.title,
    href: `${base}/meetings/${m.id.replace(/\.md$/, '')}/`,
  })),
  ...references.map((r) => ({
    date: r.data.date,
    type: 'reference' as const,
    title: r.data.title,
    href: `${base}/references/${r.id.replace(/\.md$/, '')}/`,
  })),
  ...notes.map((n) => ({
    date: n.data.date,
    type: 'note' as const,
    title: n.data.title,
    href: `${base}/notes/${n.id.replace(/\.md$/, '')}/`,
  })),
  ...snsStrategy.map((s) => ({
    date: s.data.date,
    type: 'snsStrategy' as const,
    title: s.data.title,
    href: `${base}/sns-strategy/${s.id.replace(/\.md$/, '')}/`,
  })),
];

// Sort by date descending, take latest 10
const sorted = items.sort((a, b) => b.date.getTime() - a.date.getTime()).slice(0, 10);
---

{sorted.length > 0 && (
  <section class="activity-timeline">
    <div class="section-eyebrow" style="color: var(--cyan);">Recent Activity</div>
    <h2 class="timeline-title">最近の活動</h2>
    <div class="timeline-list">
      {sorted.map((item) => {
        const cfg = contentTypeConfig[item.type];
        return (
          <a href={item.href} class="timeline-item">
            <span class="timeline-date mono">{item.date.toISOString().slice(0, 10)}</span>
            <span class="timeline-icon" style={`color: ${cfg.color}`}>{cfg.icon}</span>
            <span class="timeline-text">
              {item.title}
              {item.meta && <span class="timeline-meta">{item.meta}</span>}
            </span>
          </a>
        );
      })}
    </div>
    <div class="timeline-footer">
      <a href="#search" class="see-all">検索で全件表示 &rarr;</a>
    </div>
  </section>
)}

<style>
  .activity-timeline {
    margin-bottom: 64px;
  }

  .section-eyebrow {
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: 8px;
  }

  .timeline-title {
    margin-top: 0;
    margin-bottom: 20px;
  }

  .timeline-list {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .timeline-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 12px 16px;
    background: var(--bg-surface);
    border: 1px solid transparent;
    border-radius: 8px;
    color: var(--text);
    text-decoration: none;
    transition: all 0.15s;
  }

  .timeline-item:hover {
    border-color: var(--border-hover);
    background: var(--bg-raised);
  }

  .timeline-date {
    font-size: 12px;
    color: var(--text-muted);
    white-space: nowrap;
    min-width: 90px;
  }

  .timeline-icon {
    font-size: 16px;
    flex-shrink: 0;
  }

  .timeline-text {
    font-size: 14px;
    font-weight: 500;
  }

  .timeline-meta {
    font-size: 11px;
    color: var(--text-muted);
    margin-left: 8px;
  }

  .timeline-footer {
    text-align: center;
    margin-top: 12px;
  }

  .see-all {
    font-size: 13px;
    color: var(--text-dim);
    transition: color 0.15s;
  }
  .see-all:hover { color: var(--cyan); }

  @media (max-width: 600px) {
    .timeline-item {
      flex-wrap: wrap;
      gap: 8px;
    }
    .timeline-date {
      min-width: auto;
    }
  }
</style>
