<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(8, 8, 13, 0.85);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    height: var(--nav-height);
    display: flex;
    align-items: center;
  }

  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text);
    font-weight: 700;
    font-size: 16px;
  }

  .nav-brand:hover {
    color: var(--cyan);
  }

  .nav-icon {
    font-size: 20px;
  }

  .nav-links {
    display: flex;
    gap: 20px;
  }

  .nav-links a {
    font-size: 13px;
    font-weight: 600;
    color: var(--text-dim);
    letter-spacing: 0.5px;
  }

  .nav-links a:hover {
    color: var(--cyan);
  }

  .nav-links a.active {
    color: var(--cyan);
  }

  .main-content {
    padding-top: 40px;
    padding-bottom: 80px;
    min-height: calc(100vh - var(--nav-height) - 80px);
  }

  .footer {
    border-top: 1px solid var(--border);
    padding: 24px 0;
    text-align: center;
    color: var(--text-muted);
    font-size: 12px;
  }
</style>
