const { entry } = Astro.props;
const { Content, headings } = await entry.render();
const base = import.meta.env.BASE_URL;

const mat = maturityConfig[entry.data.maturity as keyof typeof maturityConfig];
const formattedDate = entry.data.date.toISOString().slice(0, 10);
const isPost = entry.data.category === 'post';

// Back link: if in a platform subdirectory, go to platform hub
const slugParts = entry.id.replace(/\.md$/, '').split('/');
const backLink = slugParts.length > 1
  ? { url: `${base}/sns/${slugParts[0]}/`, label: `${platformLabels[slugParts[0]] || slugParts[0]} „Éè„Éñ` }
  : { url: `${base}/sns/`, label: 'SNS„Éè„Éñ' };

// TOC: h2 headings only (for strategy docs)
const tocItems = headings.filter((h) => h.depth === 2);

type TocGroup = { tier: string; items: typeof tocItems };
const tocGroups: TocGroup[] = [];
let currentGroup: TocGroup | null = null;

for (const item of tocItems) {
  const num = item.text.match(/^(\d+)/)?.[1];
  const tierLabel = num && parseInt(num) <= 3 ? 'Âü∫Áõ§ÂàÜÊûê'
    : num && parseInt(num) <= 6 ? 'Êà¶Ë°ìË®≠Ë®à'
    : num && parseInt(num) <= 9 ? 'ÂøúÁî®Êà¶Áï•'
    : 'ÂÆüË°åÁÆ°ÁêÜ';

  if (!currentGroup || currentGroup.tier !== tierLabel) {
    currentGroup = { tier: tierLabel, items: [] };
    tocGroups.push(currentGroup);
  }
  currentGroup.items.push(item);
}

const showToc = !isPost && tocItems.length > 3;
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <div class="progress-bar" id="progress-bar"></div>

  <a href={backLink.url} class="back-link">&larr; {backLink.label}</a>

  <div class={`page-layout ${showToc ? 'has-toc' : ''}`}>
    {showToc && (
      <nav class="toc-sidebar">
        <h3 class="toc-heading">Contents</h3>
        {tocGroups.map((group) => (
          <>
            <div class="toc-tier">{group.tier}</div>
            {group.items.map((item) => {
              const num = item.text.match(/^(\d+)/)?.[1] || '';
              const label = item.text.replace(/^\d+\.\s*/, '');
              return (
                <a href={`#${item.slug}`} class="toc-link">
                  {num && <span class="toc-num">{num.padStart(2, '0')}</span>}
                  <span>{label}</span>
                </a>
              );
            })}
          </>
        ))}
      </nav>
    )}

    <div class="article-main">
      <header class="article-header">
        <h1>{entry.data.title}</h1>
        <div class="article-meta">
          <span class="mono">{formattedDate}</span>
          {mat && <span class={`maturity-badge ${entry.data.maturity}`}>{mat.label}</span>}
        </div>
        {entry.data.tags.length > 0 && (
          <div class="article-tags">
            {entry.data.tags.map((tag: string) => (
              <a href={`${base}/tags/${tag}/`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </header>

      <!-- Meta bar -->
      <div class="meta-bar">
        <span class="meta-label">Category:</span>
        <span class="category-tag">{categoryLabels[entry.data.category] || entry.data.category}</span>
        {entry.data.platforms.length > 0 && (
          <>
            <span class="meta-divider">|</span>
            <span class="meta-label">Platforms:</span>
            {entry.data.platforms.map((p: string) => (
              <span class="platform-tag">{platformLabels[p] || p}</span>
            ))}
          </>
        )}
      </div>

      <!-- Post-specific meta -->
      {isPost && (
        <div class="post-meta-bar">
          {entry.data.postId && (
            <div class="post-meta-item">
              <span class="post-meta-label">ID</span>
              <span class="post-meta-value mono">{entry.data.postId}</span>
            </div>
          )}
          {entry.data.postStatus && (
            <div class="post-meta-item">
              <span class="post-meta-label">„Çπ„ÉÜ„Éº„Çø„Çπ</span>
              <span class="post-meta-value">{postStatusLabels[entry.data.postStatus] || entry.data.postStatus}</span>
            </div>
          )}
          {entry.data.hookType && (
            <div class="post-meta-item">
              <span class="post-meta-label">„Éï„ÉÉ„ÇØÂûã</span>
              <span class="post-meta-value">{entry.data.hookType}</span>
            </div>
          )}
          {entry.data.hookScore != null && (
            <div class="post-meta-item">
              <span class="post-meta-label">„Çπ„Ç≥„Ç¢</span>
              <span class="post-meta-value mono">{entry.data.hookScore}/30</span>
            </div>
          )}
