---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { contentTypeConfig } from '../../data/taxonomy';

export async function getStaticPaths() {
  const research = await getCollection('research', ({ data }) => !data.draft);
  const meetings = await getCollection('meetings', ({ data }) => !data.draft);
  const references = await getCollection('references', ({ data }) => !data.draft);
  const notes = await getCollection('notes', ({ data }) => !data.draft);

  // Collect all unique tags
  const tagSet = new Set<string>();
  [...research, ...meetings, ...references, ...notes].forEach((entry) => {
    entry.data.tags?.forEach((t: string) => tagSet.add(t));
  });

  return [...tagSet].map((tag) => ({
    params: { tag },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const base = import.meta.env.BASE_URL;

// Gather all content with this tag
const research = (await getCollection('research', ({ data }) => !data.draft && data.tags.includes(tag)))
  .map((r) => ({
    date: r.data.date,
    type: 'research' as const,
    title: r.data.title,
    href: `${base}/research/${r.id.replace(/\.md$/, '')}/`,
  }));

const meetings = (await getCollection('meetings', ({ data }) => !data.draft && data.tags.includes(tag)))
  .map((m) => ({
    date: m.data.date,
    type: 'meeting' as const,
    title: m.data.title,
    href: `${base}/meetings/${m.id.replace(/\.md$/, '')}/`,
  }));

const references = (await getCollection('references', ({ data }) => !data.draft && data.tags.includes(tag)))
  .map((r) => ({
    date: r.data.date,
    type: 'reference' as const,
    title: r.data.title,
    href: `${base}/references/${r.id.replace(/\.md$/, '')}/`,
  }));

const notes = (await getCollection('notes', ({ data }) => !data.draft && data.tags.includes(tag)))
  .map((n) => ({
    date: n.data.date,
    type: 'note' as const,
    title: n.data.title,
    href: `${base}/notes/${n.id.replace(/\.md$/, '')}/`,
  }));

const all = [...research, ...meetings, ...references, ...notes]
  .sort((a, b) => b.date.getTime() - a.date.getTime());
---

<BaseLayout title={`Tag: ${tag}`}>
  <a href={base} class="back-link">&larr; Home</a>

  <header class="tag-header">
    <div class="badge">TAG</div>
    <h1>{tag}</h1>
    <p class="tag-count">{all.length} items</p>
  </header>

  <div class="content-list">
    {all.map((item) => {
      const cfg = contentTypeConfig[item.type];
      return (
        <a href={item.href} class="content-item">
          <span class="mono item-date">{item.date.toISOString().slice(0, 10)}</span>
          <span class="item-icon" style={`color: ${cfg.color}`}>{cfg.icon}</span>
          <span class="item-title">{item.title}</span>
        </a>
      );
    })}
  </div>
</BaseLayout>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--text-dim);
    padding: 8px 0;
    transition: color 0.15s;
  }
  .back-link:hover { color: var(--cyan); }

  .tag-header {
    text-align: center;
    padding: 40px 0 32px;
    border-bottom: 1px solid var(--border);
    margin-bottom: 32px;
  }

  .tag-header h1 { margin: 12px 0 8px; }
  .tag-count { color: var(--text-muted); font-size: 14px; }

  .content-list {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .content-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 12px 16px;
    background: var(--bg-surface);
    border: 1px solid transparent;
    border-radius: 8px;
    text-decoration: none;
    color: var(--text);
    transition: all 0.15s;
  }

  .content-item:hover {
    border-color: var(--border-hover);
    background: var(--bg-raised);
  }

  .item-date {
    font-size: 12px;
    color: var(--text-muted);
    min-width: 90px;
  }

  .item-icon { font-size: 16px; flex-shrink: 0; }
  .item-title { font-size: 14px; font-weight: 500; }
</style>
